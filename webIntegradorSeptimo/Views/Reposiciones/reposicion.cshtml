
@{
    ViewBag.Title = "reposicion";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<div class="container-fluid">
    <h3 class="texto-verde" id="titulo"><i class="fa fa-angle-right p-2 "></i> Nueva Reposición</h3>
    <hr style="height: 1px; background-color: #4ECDC4; border: none; margin:0" />


    <div class="container">
        <h5 class="texto-verde mt-2 text-center" id="espere">Cargando . . .</h5>
        <div class="card h-100 mt-3" id="contenedor" hidden>
            <form enctype='multipart/form-data' name="frm" id="frm" class="card-body pb-4 ">
                <input type="text" id="idCategoria" name="idCategoria" value="0" hidden />


                <div class="row form-inline col-sm pt-1 ml-auto mr-auto">
                    <div style="width:180px;" class="font-weight-bold pr-3">
                        PRODUCTO <span class="text-danger">*</span>
                    </div>
                    <select class="col-sm-5 form-control form-control-sm round-form validarVacio" id="idProducto" name="idProducto">
                    </select>
                    <span class="text-danger font-weight-bold pl-2" id="idProductoVal" hidden>Seleccione un producto</span>
                </div>

                <div class="row form-inline col-sm pt-1 ml-auto mr-auto">
                    <div style="width:180px;" class="font-weight-bold pr-3">
                        CANTIDAD <span class="text-danger">*</span>
                    </div>
                    <input type="number" class="col-sm-2 form-control form-control-sm text-right round-form validarVacio validarDecimal" id="cantidad" name="cantidad" value="" maxlength="250" />
                    <span class="text-danger font-weight-bold pl-2" id="cantidadVal" hidden>Ingrese una cantidad</span>
                </div>


                <div class="pt-4 col-sm-7 text-center">
                    <a class="btn btn-theme04 mr-1" href="~/Reposiciones/" id="btnCancelar">CANCELAR</a>
                    <button class="btn btn-theme" type="button" onclick="guardar(this)">GUARDAR</button>

                </div>

            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/js/config/navbar.js"></script>
<script src="~/Scripts/js/system/reposiciones/siteFormulario.js"></script>

