    <script src="~/Content/template_tienda/js/popper.min.js"></script>
    <script src="~/Content/template_tienda/js/bootstrap.min.js"></script>
    <script src="~/Content/template_tienda/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/template_tienda/js/aos.js"></script>
    @*<script src="~/Content/template_tienda/js/main.js"></script>*@
    @*<script src="~/Scripts/validadores.js"></script>*@
    <script src="~/Content/notification/build/toastr.min.js"></script>
    <script src="~/Scripts/js/config/routing.js"></script>
    <script src="~/Scripts/js/config/conexion.js"></script>
    <script src="~/Scripts/js/config/msgConfig.js"></script>
    <script src="~/Scripts/js/system/tienda/siteMaster.js"></script>
</body>
</html>
