
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}


<div class="container-fluid">
    <h3 class="texto-verde"><i class="fa fa-angle-right p-2 "></i> Categorías</h3>
    <hr style="height: 1px; background-color: #4ECDC4; border: none; margin:0" />

    <div class="text-center mt-4">
        <a class="btn btn-theme btn-sm" style="min-width:250px" href="~/Categorias/Categoria">Nuevo</a>
    </div>

    <h5 class="texto-verde mt-2 text-center" id="espere" hidden>Cargando . . .</h5>
    
    <div class="container h-100 mt-3 p-2" id="contenedor" style="max-width:55em" hidden>
        <hr style="height: 1px; background-color: #E8E8E8; border: none; margin:0" class="mb-3" />
        <div class="container-fluid pt-1" style="max-height:50em;overflow-y:auto !important">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered table-sm" id="tabla">
                <thead>
                    <tr>
                        <th width="50px">#</th>
                        <th>Nombre</th>
                        <th width="100px"></th>
                    </tr>
                </thead>
                <tbody id="cuerpoTabla">
                </tbody>

            </table>

        </div>


    </div>


</div>

<script src="~/Scripts/js/config/navbar.js"></script>
